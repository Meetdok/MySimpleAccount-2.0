<Page x:Class="MySimpleAccount_2._0.EditGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MySimpleAccount_2._0"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditGamePage">
    <StackPanel>
        <Label Content="Название" Background="#FFFCA145"/>
        <TextBox Text="{Binding Game.Title}"/>
        <Label Content="Жанр" Background="#FFFCA145"/>
        <TextBox Text="{Binding Game.Genre}"/>
        <Label Content="Возврастной рейтинг" Background="#FFFCA145"/>
        <TextBox Text="{Binding Game.PEGI}"/>
        <Button Content="Сохранить" Command="{Binding AddGame}" HorizontalAlignment="Center" Padding="5" Margin="3" Background="#FFFDFDFD"/>
        <Button Content="Список игр" Command="{Binding GameListGame}" Margin="345,0" Background="White"/>
    </StackPanel>
</Page>
